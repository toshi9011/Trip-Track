<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        投稿詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
            <% if @trip.image.attached? %>
              <%= image_tag @trip.image %>
            <% end %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @trip.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>詳細</th>
                </tr>
                <tr>
                  <td><%= simple_format @trip.body %></td>
                </tr>
              </table>
              <%= link_to "編集画面へ", edit_trip_path(@trip), class: "button is-success" %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            <%= @trip.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @trip.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@trip.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @trip.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>